{
  "name": "@marufme/react-text-editor",
  "private": false,
  "version": "1.0.4",
  "description": "A professional React wrapper for SunEditor with modular configs, plugin support, and TypeScript-first approach",
  "type": "module",
  "author": {
    "name": "MD Maruf Hossain",
    "email": "marufme.dev@gmail.com",
    "url": "https://marufme.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/maruf-me/react-text-editor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/maruf-me/react-text-editor.git",
    "directory": "packages/react-text-editor"
  },
  "bugs": {
    "url": "https://github.com/maruf-me/react-text-editor/issues"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests --ext .ts,.tsx",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "type-check": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "editor",
    "wysiwyg",
    "suneditor",
    "rich-text",
    "text-editor",
    "contenteditable",
    "enterprise",
    "modular",
    "typescript",
    "react-component",
    "react-editor",
    "react-wysiwyg",
    "marufme",
    "web-editor"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "katex": "^0.16.27",
    "suneditor": "^2.47.8",
    "suneditor-react": "^3.6.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.0"
  }
}